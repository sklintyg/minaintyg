<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>se.inera.intyg</groupId>
    <artifactId>intyg-parent</artifactId>
    <version>1.3-SNAPSHOT</version>
  </parent>

  <groupId>se.inera.certificate-web</groupId>
  <artifactId>certificate-web</artifactId>
  <packaging>pom</packaging>
  <name>Inera Certificate Web (Mina Intyg)</name>

  <properties>
    <!-- Project related -->
    <repository.host>repository-callistasoftware.forge.cloudbees.com</repository.host>
    <!-- Dependency to Netcare's MVK integration -->
    <mvkintegration.version>1.2-SNAPSHOT</mvkintegration.version>

    <!-- Dependency to Intygstjansten's services -->
    <certificate.version>1.3-SNAPSHOT</certificate.version>
    <certificate-logback-util.version>1.1.2</certificate-logback-util.version>

    <!-- Dependency to Intygstjansten's modules -->
    <modules-fk7263.version>1.0-SNAPSHOT</modules-fk7263.version>
    <modules-ts.version>1.0-SNAPSHOT</modules-ts.version>
    <modules-common-webjar.version>1.3-SNAPSHOT</modules-common-webjar.version>

    <!-- Dependency to Intygstjansten proxy project -->
    <inera.certificate.proxy.version>1.1-SNAPSHOT</inera.certificate.proxy.version>

    <checkstyle.basedir>${project.basedir}</checkstyle.basedir>
  </properties>

  <modules>
    <module>citizen-web</module>
    <module>specifications</module>
  </modules>

  <scm>
    <connection>scm:git:https://code.google.com/p/inera-certificate-web/</connection>
    <tag>HEAD</tag>
  </scm>

  <dependencyManagement>
    <dependencies>
      <!-- Dependency to Netcare's MVK integration -->
      <dependency>
        <groupId>org.callistasoftware.netcare.commons</groupId>
        <artifactId>mvk-integration</artifactId>
        <version>${mvkintegration.version}</version>
        <exclusions>
          <exclusion>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-core</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-web</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
          </exclusion>
        </exclusions>
      </dependency>

      <!-- Dependency to Intygstjansten's projects -->
      <dependency>
        <groupId>se.inera.certificate</groupId>
        <artifactId>certificate-specifications</artifactId>
        <version>${certificate.version}</version>
      </dependency>
      <dependency>
        <groupId>se.inera.certificate</groupId>
        <artifactId>logback-util</artifactId>
        <version>${certificate-logback-util.version}</version>
      </dependency>
      <dependency>
        <groupId>se.inera.certificate</groupId>
        <artifactId>module-api</artifactId>
        <version>${certificate.version}</version>
      </dependency>
      <dependency>
        <groupId>se.inera.certificate</groupId>
        <artifactId>schemas</artifactId>
        <version>${certificate.version}</version>
      </dependency>

      <!-- Dependency to Intygstjansten's modules -->
      <dependency>
        <groupId>se.inera.certificate.modules</groupId>
        <artifactId>fk7263</artifactId>
        <version>${modules-fk7263.version}</version>
      </dependency>
      <dependency>
        <groupId>se.inera.certificate.modules</groupId>
        <artifactId>ts-bas</artifactId>
        <version>${modules-ts.version}</version>
      </dependency>
      <dependency>
        <groupId>se.inera.certificate.modules</groupId>
        <artifactId>ts-diabetes</artifactId>
        <version>${modules-ts.version}</version>
      </dependency>
      <dependency>
        <groupId>se.inera.certificate.modules</groupId>
        <artifactId>common-webjar</artifactId>
        <version>${modules-common-webjar.version}</version>
      </dependency>

      <!-- Spring dependencies -->
      <dependency>
        <groupId>org.springframework.security</groupId>
        <artifactId>spring-security-config</artifactId>
        <version>${spring.security.version}</version>
        <exclusions>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-aop</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
          </exclusion>
        </exclusions>
      </dependency>
      <dependency>
        <groupId>org.springframework.security</groupId>
        <artifactId>spring-security-taglibs</artifactId>
        <version>${spring.security.version}</version>
        <exclusions>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-aop</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-expression</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-jdbc</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-tx</artifactId>
          </exclusion>
        </exclusions>
      </dependency>
      <dependency>
        <groupId>org.springframework.security</groupId>
        <artifactId>spring-security-web</artifactId>
        <version>${spring.security.version}</version>
        <exclusions>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-expression</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-aop</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-jdbc</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-tx</artifactId>
          </exclusion>
        </exclusions>
      </dependency>

    </dependencies>
  </dependencyManagement>

  <repositories>
    <repository>
      <id>callista-release</id>
      <url>https://${repository.host}/release/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>callista-snapshot</id>
      <url>https://${repository.host}/snapshot/</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>thirdparty</id>
      <url>https://${repository.host}/3rdparty</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>

</project>
