    <commons.ui.version>2.4</commons.ui.version>
    <checkstyle.basedir>${project.basedir}</checkstyle.basedir>
    <liquibase.version>2.0.5</liquibase.version>
    <jaxb.commons.version>0.6.4</jaxb.commons.version>
    <jackson.version>2.1.1</jackson.version>
    <logback.version>1.0.11</logback.version>
    <guava.version>14.0.1</guava.version>
    <aspectj.version>1.7.1</aspectj.version>
    <xmlunit.version>1.4</xmlunit.version>
  </properties>

  <dependencyManagement>
    <dependencies>

      <dependency>
        <groupId>commons-io</groupId>
        <artifactId>commons-io</artifactId>
        <version>${commons.ui.version}</version>
      </dependency>

      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>schemas</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>${project.groupId}</groupId>
