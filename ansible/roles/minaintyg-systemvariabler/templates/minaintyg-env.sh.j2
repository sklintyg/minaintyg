ENV_CFG="-Dspring.profiles.active={{ profile }}"
JVM_CFG="-Xms1024m -Xmx1024m -XX:PermSize=128m -XX:MaxPermSize=512m -Dfile.encoding=UTF-8"
DEBUG_CFG="-XX:-HeapDumpOnOutOfMemoryError -XX:HeapDumpPath={{ inera_tomcat_folder }}"
CREDENTIALS_CFG="-Dcredentials.file={{ config_etc_folder }}/minaintyg/credentials.properties"
MINAINTYG_CFG="-Dminaintyg.config.folder={{ config_etc_folder }} -Dminaintyg.config.file={{ config_etc_folder }}/minaintyg/minaintyg.properties -Dminaintyg.logback.file={{ config_etc_folder }}/minaintyg/minaintyg-logback.xml"
export JAVA_OPTS="$JAVA_OPTS $ENV_CFG $JVM_CFG $DEBUG_CFG $CREDENTIALS_CFG $MINAINTYG_CFG"
