ENV_CFG="-Dspring.profiles.active={{ profiles }}"
JVM_CFG="-Xms1024m -Xmx1024m -Dfile.encoding=UTF-8"
DEBUG_CFG="-XX:-HeapDumpOnOutOfMemoryError -XX:HeapDumpPath={{ inera_tomcat_folder }}"
CREDENTIALS_CFG="-Dminaintyg.credentials.file={{ config_etc_folder }}/credentials.properties"
MINAINTYG_CFG="-Dminaintyg.config.folder={{ config_etc_folder }} -Dminaintyg.config.file={{ config_etc_folder }}/minaintyg.properties -Dminaintyg.logback.file={{ config_etc_folder }}/minaintyg-logback.xml -Dminaintyg.stubs.port={{ tomcat_http_port }}"
MINAINTYG_RESOURCES="-Dminaintyg.resources.folder={{ app_resources_folder }}"
export JAVA_OPTS="$JAVA_OPTS $ENV_CFG $JVM_CFG $DEBUG_CFG $CREDENTIALS_CFG $MINAINTYG_CFG $MINAINTYG_RESOURCES"
