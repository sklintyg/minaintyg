ENV_CFG="-Dspring.profiles.active={{ profiles }}"
JVM_CFG="-Xms1024m -Xmx1024m -Dfile.encoding=UTF-8"
DEBUG_CFG="-XX:-HeapDumpOnOutOfMemoryError -XX:HeapDumpPath={{ inera_tomcat_folder }}"
CREDENTIALS_CFG="-Dcredentials.file={{ config_etc_folder }}/credentials.properties"
MINAINTYG_CFG="-Dconfig.folder={{ config_etc_folder }} -Dconfig.file={{ config_etc_folder }}/minaintyg.properties -Dlogback.file={{ config_etc_folder }}/minaintyg-logback.xml -Dstubs.port={{ tomcat_http_port }}"
MINAINTYG_RESOURCES="-Dresources.folder={{ app_resources_folder }}"
export JAVA_OPTS="$JAVA_OPTS $ENV_CFG $JVM_CFG $DEBUG_CFG $CREDENTIALS_CFG $MINAINTYG_CFG $MINAINTYG_RESOURCES"
