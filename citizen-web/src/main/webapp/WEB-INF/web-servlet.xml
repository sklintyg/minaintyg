<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
    http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

  <mvc:annotation-driven/>
  <mvc:default-servlet-handler/>

  <mvc:interceptors>
    <mvc:interceptor>
      <mvc:mapping path="/**"/>
      <mvc:exclude-mapping path="/sso"/>
      <mvc:exclude-mapping path="/visa-ge-samtycke"/>
      <mvc:exclude-mapping path="/ge-samtycke"/>
      <mvc:exclude-mapping path="/tillbaka-till-mvk"/>
      <mvc:exclude-mapping path="/logga-ut"/>
      <mvc:exclude-mapping path="/logga-ut-fk"/>
      <bean class="se.inera.certificate.web.security.VerifyConsentInterceptor">
        <property name="jsonResponse" value="false"/>
      </bean>
    </mvc:interceptor>
  </mvc:interceptors>

  <context:property-placeholder location="file:${user.home}/.${spring.profiles.active}.minaintyg.se/config.properties" ignore-resource-not-found="true" ignore-unresolvable="true" />

  <context:property-placeholder
    location="classpath:default.${spring.profiles.active}.properties, classpath:override.${spring.profiles.active}.properties" ignore-resource-not-found="true" ignore-unresolvable="true"/>

  <beans>
    <context:annotation-config/>
    <context:component-scan base-package="se.inera.certificate.web.controller"/>
  </beans>

  <beans>
    <bean id="viewResolver" class="org.springframework.web.servlet.view.UrlBasedViewResolver">
      <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
      <property name="prefix" value="/WEB-INF/pages/"/>
      <property name="suffix" value=".jsp"/>
    </bean>
  </beans>

</beans>