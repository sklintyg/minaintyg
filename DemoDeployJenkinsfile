#!groovy

def baseVersion = "3.6.1.*"

stage('checkout tools') {
    node {
        util.run {
            dir('base_tools') {
                git url: "https://github.com/sklintyg/tools.git", branch: "develop"
            }
        }
    }
}

stage('checkout minaintyg') {
    node {
        git url: "https://github.com/sklintyg/minaintyg.git", branch: GIT_BRANCH
        util.run { checkout scm }
    }
}

stage('run cleanup scripts') {
    node {
        util.run {
            dir('base_tools') {
                ansiblePlaybook(extraVars: [ansible_ssh_host: "164.40.180.105"], installation: 'ansible-yum',
                        inventory: 'ansible/inventory/minaintyg/demo', playbook: 'ansible/cleanup.yml')
            }
        }
    }
}

stage('provision (tools)') {
    node {
        util.run {
            dir('base_tools') {
                ansiblePlaybook(extraVars: [ansible_ssh_host: "164.40.180.105"], installation: 'ansible-yum',
                        inventory: 'ansible/inventory/minaintyg/demo', playbook: 'ansible/provision.yml')
            }
        }
    }
}

stage('provision') {
    node {
        util.run {
            ansiblePlaybook(extraVars: [ansible_ssh_host: "164.40.180.105", gitcrypt_key_file: "/home/jenkins/git-crypt4.key"],
                    installation: 'ansible-yum', inventory: 'ansible/inventory/minaintyg/demo',
                    playbook: 'ansible/provision.yml')
        }
    }
}

stage('deploy') {
    node {
        util.run({
                def itVersion = util.latestVersion("se/inera/intyg/minaintyg/minaintyg-web", baseVersion)

                ansiblePlaybook(extraVars: [version: "${itVersion}", ansible_ssh_host: "164.40.180.105", deploy_from_repo: "true"],
                                installation: 'ansible-yum', inventory: 'ansible/inventory/minaintyg/demo', playbook: 'ansible/deploy.yml')

                util.waitForServer('https://demo.minaintyg.intygstjanster.se/version.jsp')
            })
    }
}
