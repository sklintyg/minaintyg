<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
    http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

  <mvc:annotation-driven/>
  <mvc:resources mapping="/webjars/**" location="classpath:/META-INF/resources/webjars/"/>
  <mvc:default-servlet-handler/>

  <mvc:interceptors>
    <mvc:interceptor>
      <mvc:mapping path="/**"/>
      <mvc:exclude-mapping path="/sso"/>
      <mvc:exclude-mapping path="/visa-ge-samtycke"/>
      <mvc:exclude-mapping path="/ge-samtycke"/>
      <mvc:exclude-mapping path="/tillbaka-till-mvk"/>
      <mvc:exclude-mapping path="/logga-ut"/>
      <mvc:exclude-mapping path="/logga-ut-fk"/>
      <!-- Since we load webjars resources via require we need to allow this without a given consent -->
      <mvc:exclude-mapping path="/webjars/**"/>
      <bean class="se.inera.intyg.minaintyg.web.security.VerifyConsentInterceptor">
      </bean>
    </mvc:interceptor>
    <mvc:interceptor>
      <mvc:mapping path="/**"/>
      <mvc:exclude-mapping path="/sso"/>
      <mvc:exclude-mapping path="/visa-ge-samtycke"/>
      <mvc:exclude-mapping path="/ge-samtycke"/>
      <mvc:exclude-mapping path="/tillbaka-till-mvk"/>
      <mvc:exclude-mapping path="/logga-ut"/>
      <mvc:exclude-mapping path="/logga-ut-fk"/>
      <bean class="se.inera.intyg.minaintyg.web.security.BrowserClosedInterceptor">
        <property name="timeoutSeconds" value="5"/>
        <property name="redirectLocation" value="/web/start"/>
        <property name="logoutHandler" ref="logoutHandler" />
      </bean>
    </mvc:interceptor>
  </mvc:interceptors>

  <beans profile="qa,prod">
    <!-- Config file must be present in qa and prod -->
    <context:property-placeholder
      location="file:${config.file}" order="1"
      ignore-resource-not-found="false" ignore-unresolvable="true" />
  </beans>
  <beans profile="dev,test">
    <!-- Config file could be missing in dev and test -->
    <context:property-placeholder
      location="file:${config.file}" order="1"
      ignore-resource-not-found="true" ignore-unresolvable="true" />
  </beans>

  <beans>
    <context:property-placeholder
      location="classpath:default.properties, classpath:default.${spring.profiles.active}.properties"  order="2"
      ignore-resource-not-found="true" ignore-unresolvable="true"/>
    <context:annotation-config/>
    <context:component-scan base-package="se.inera.intyg.minaintyg.web.controller"/>
  </beans>

  <beans>
    <bean id="viewResolver" class="org.springframework.web.servlet.view.UrlBasedViewResolver">
      <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
      <property name="prefix" value="/"/>
      <property name="suffix" value=".jsp"/>
    </bean>

    <bean id="localeResolver"
        class="org.springframework.web.servlet.i18n.FixedLocaleResolver">
      <property name="defaultLocale" value="en" />
    </bean>
  </beans>

</beans>
