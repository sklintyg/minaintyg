<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws" xmlns:cxf="http://cxf.apache.org/core"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
        http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd">

  <import resource="classpath:META-INF/cxf/cxf.xml"/>

  <jaxws:client id="getConsentClient"
      serviceClass="se.inera.intyg.insuranceprocess.healthreporting.getconsent.rivtabp20.v1.GetConsentResponderInterface"
      address="${consent.get.url}"/>

  <jaxws:client id="setConsentClient"
      serviceClass="se.inera.intyg.insuranceprocess.healthreporting.setconsent.rivtabp20.v1.SetConsentResponderInterface"
      address="${consent.set.url}"/>

  <jaxws:client id="listCertificatesClient"
      serviceClass="se.inera.intyg.clinicalprocess.healthcond.certificate.listcertificatesforcitizen.v1.ListCertificatesForCitizenResponderInterface"
      address="${certificates.list.url}"/>

  <jaxws:client id="setCertificateStatusClient"
      serviceClass="se.inera.ifv.insuranceprocess.healthreporting.setcertificatestatus.rivtabp20.v1.SetCertificateStatusResponderInterface"
      address="${certificates.setstatus.url}"/>

  <jaxws:client id="setCertificateArchivedClient"
      serviceClass="se.inera.intyg.insuranceprocess.healthreporting.setcertificatearchived.rivtabp20.v1.SetCertificateArchivedResponderInterface"
      address="${certificates.setarchived.url}"/>

  <jaxws:client id="sendCertificateToRecipientClient"
      serviceClass="se.inera.intyg.clinicalprocess.healthcond.certificate.sendcertificatetorecipient.v1.SendCertificateToRecipientResponderInterface"
      address="${certificates.sendcertificatetorecipient.url}" />

  <jaxws:client id="getCertificateContentClient"
      serviceClass="se.inera.intyg.insuranceprocess.healthreporting.getcertificatecontent.rivtabp20.v1.GetCertificateContentResponderInterface"
      address="${certificates.getcertificatecontent.url}" />

  <jaxws:client id="getCertificateClient"
      serviceClass="se.riv.clinicalprocess.healthcond.certificate.getCertificate.v1.GetCertificateResponderInterface"
      address="${certificates.getcertificate.url}" />

  <jaxws:client id="getRecipientsForCertificateClient"
      serviceClass="se.inera.intyg.clinicalprocess.healthcond.certificate.getrecipientsforcertificate.v1.GetRecipientsForCertificateResponderInterface"
      address="${certificates.getrecipientforcertificate.url}" />

  <!-- Client for the PingForConfiguration service on Intygstjanst -->
  <jaxws:client id="pingIntygstjanstForConfigurationClient" 
                  serviceClass="se.riv.itintegration.monitoring.rivtabp21.v1.PingForConfigurationResponderInterface"
                  address="${certificates.pingforconfiguration.url}" />

  <cxf:bus>
    <cxf:features>
      <cxf:logging/>
    </cxf:features>
  </cxf:bus>
</beans>
