  "items": {
    "type": "object",
    "properties": {
      "recipientId": {
        "type": "string"
      },
      "sent": {
        "type": "boolean"
      }
    ,
      "timestamp": {
        "type": "string"
      }
    },
    "required": [
      "recipientId",
      "sent"
    ]
  }
}